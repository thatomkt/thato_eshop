<div class="container-fluid view">

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= image_tag @product.image_url,class: "img-responsive" %>
</p>
<p>
   <strong>Colour:</strong>
   <%= @product.colour %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>


<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>
    <p>
    	<div class="rating"></div>
     <!-- <%= f.label :rating  %><br>-->
     <!-- <%= f.text_field :rating, class: "rating" %>-->
    </p>
    <p>
      <%= f.submit "Submit" %>
    </p>
    <% end %>
<% end %> 

      <div class="product-reviews">
         <%= @comments.each do |comments| %>
              <div class="row">
                 <hr>
                 <p><%= comment.user.first_name %> <small><em>
                 	<%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
                 <p><%= "Rating: #{comment.rating}/5" %></p>
                 <p><%= comment.body %></p>
              </div>
         <% end %>
      </div>


</div>
