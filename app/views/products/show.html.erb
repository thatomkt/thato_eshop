<div class="container-fluid view">

  <p id="notice"><%= notice %></p>
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= image_tag @product.image_url,class: "img-responsive" %>
  </p>
  <p>
     <strong>Colour:</strong>
     <%= @product.colour %>
  </p>
  
  <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>


  <%= render partial: "new_comment" %>
  
  <div class="product-reviews">
     <% @comments.each do |comment| %>
          <div class="row">
             <hr>
             <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
             <div class="rated" data-score="<%= comment.rating %>"></div>
             <p><%= comment.body %></p>

          </div>
     
     <% end %>
     <%= will_paginate @comments %>
 
  </div>
  
 
 
  

</div>
